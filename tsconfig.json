{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "paths": {
            "*": ["node_modules/*"]
        },
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "dist"
    ]
}